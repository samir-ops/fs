<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<title>Two-Level Product Filter</title>
<style>
* {margin:0;padding:0;box-sizing:border-box;font-family:system-ui,sans-serif}
body {background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);min-height:100vh;padding:20px}
.container {max-width:1200px;margin:auto;padding:20px}
h2 {text-align:center;color:white;margin-bottom:30px;font-size:2.5em;text-shadow:0 2px 10px rgba(0,0,0,0.3)}
.level {background:rgba(255,255,255,0.1);backdrop-filter:blur(10px);border-radius:20px;padding:25px;margin-bottom:30px;border:1px solid rgba(255,255,255,0.2)}
.categories {display:flex;gap:15px;justify-content:center;flex-wrap:wrap}
.category-btn {background:rgba(255,255,255,0.2);color:white;padding:12px 24px;border-radius:25px;cursor:pointer;transition:all 0.3s;border:1px solid rgba(255,255,255,0.3);font-weight:500}
.category-btn:hover,.category-btn.active {background:white;color:#667eea;transform:translateY(-3px);box-shadow:0 10px 30px rgba(0,0,0,0.2)}
.subcategories,.products {display:grid;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));gap:25px;opacity:0;transform:translateY(20px);transition:all 0.4s}
.subcategories.show,.products.show {opacity:1;transform:translateY(0)}
.subcat-item,.product {background:rgba(255,255,255,0.1);backdrop-filter:blur(20px);border-radius:20px;border:1px solid rgba(255,255,255,0.2);padding:25px;text-align:center;color:white;cursor:pointer;transition:all 0.4s;position:relative;overflow:hidden}
.subcat-item:hover,.product:hover {transform:translateY(-8px);box-shadow:0 20px 40px rgba(0,0,0,0.3)}
.subcat-item h3,.product h3 {font-size:22px;margin-bottom:10px;font-weight:600}
.subcat-item .price,.product .price {font-size:28px;font-weight:bold;color:#4ade80;margin-bottom:15px}
.product .category {background:rgba(255,255,255,0.3);color:white;padding:8px 16px;border-radius:20px;font-size:14px;font-weight:500;position:absolute;bottom:20px;right:20px}
@media(max-width:768px){.categories{flex-direction:column;align-items:center}}
</style>
</head>
<body>
<div class="container">
<h2>Product Filter</h2>
<div class="level" id="categories-level">
<div class="categories">
<div class="category-btn active" onclick="showSubcategories('all')">All Products</div>
<div class="category-btn" onclick="showSubcategories('electronics')">Electronics</div>
<div class="category-btn" onclick="showSubcategories('clothing')">Clothing</div>
</div>
<div class="subcategories" id="subcategories"></div>
</div>
<div class="level products-section" id="products-level" style="display:none">
<div class="products" id="products"></div>
</div>
</div>
<script>
const data={
electronics: [
{name:"Laptops",price:4560000,count:3},
{name:"Smartphones",price:1200000,count:5},
{name:"Headphones",price:12999,count:2}
],
clothing: [
{name:"T-Shirts",price:2499,count:8},
{name:"Jeans",price:5999,count:4},
{name:"Jackets",price:12999,count:3}
]
};
function showSubcategories(cat){
document.querySelectorAll('.category-btn').forEach(btn=>btn.classList.remove('active'));
event.target.classList.add('active');
const subcatsEl=document.getElementById('subcategories');
if(cat==='all'){
subcatsEl.innerHTML='<div style="color:white;text-align:center;padding:40px">Select a category to see subcategories</div>';
document.getElementById('products-level').style.display='none';
}else{
subcatsEl.innerHTML=data[cat].map(item=>`
<div class="subcat-item" onclick="showProducts('${cat}','${item.name}')">
<h3>${item.name}</h3>
<div class="price">₹${item.price.toLocaleString()}</div>
<div>${item.count} Products</div>
</div>
`).join('');
subcatsEl.classList.add('show');
document.getElementById('products-level').style.display='none';
}
}
function showProducts(cat,subcat){
document.getElementById('categories-level').style.display='none';
document.getElementById('products-level').style.display='block';
const products=[{name:"Gaming Laptop Pro",price:4560000,cat:cat},{name:"iPhone 16 Ultra",price:1200000,cat:cat},{name:"AirPods Max",price:25000,cat:cat}];
const cont=document.getElementById('products');
cont.innerHTML=products.map(p=`
<div class="product">
<h3>${p.name}</h3>
<div class="price">₹${p.price.toLocaleString()}</div>
<div class="category">${p.cat.charAt(0).toUpperCase()+p.cat.slice(1)}</div>
</div>
`).join('');
cont.classList.add('show');
}
showSubcategories('all');
</script>
</body>
</html>
